---
title: Authors
description: This page lists all of the Blog's authors.
layout: layouts/base.njk
pagination:
  data: collections.author
  size: Infinity
  alias: author
eleventyNavigation:
  key: authors
  title: Authors
  order: 1
permalink: "authors/index.html"
---
<h1>{{ title }}</h1>

<section>

  {% for author in pagination.items %}

    <article>

      <a href="{{ author.url }}">
      
        {% if author.data.image %}
          {% generateImage author.data.image, author.data.name, "90vw" %}
        {% endif %}

        <h3>{{ author.data.name }}</h3>

      </a>

    </article>

  {% endfor %}
  
</section>
